{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "dev-region": {
            "description": {
                "$ref": "#/messages/region.description"
            },
            "type": "string",
            "validator": {
                "v-type": "cf-region",
                "params": ["api-key"]
            },
            "disabled": false
        },
        "dev-organization": {
            "description": {
                "$ref": "#/messages/organization.description"
            },
          "type": "string",
          "validator": {
              "v-type": "cf-org",
              "params": ["dev-region"]
          }
        },
        "dev-space": {
            "description": {
                "$ref": "#/messages/space.description"
            },
          "type": "string",
          "validator": {
              "v-type": "cf-space",
              "params": ["dev-organization"]
          }
        },
        "icf-namespace": {
            "title": {
                "$ref": "#/messages/icf.namespace"
            },
            "type": "string"
        },
        "icf-namespace-id": {
            "title": {
                "$ref": "#/messages/icf.namespace.id"
            },
            "type": "string"
        },
        "poultry-sense-host": {
            "title": {
                "$ref": "#/messages/poultrysense.host"
            },
            "type": "string"
        },
        "poultry-sense-username": {
            "title": {
                "$ref": "#/messages/poultrysense.username"
            },
            "type": "string"
        },
        "poultry-sense-password": {
            "title": {
                "$ref": "#/messages/poultrysense.password"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "password"
            }
        },
        "bts-host": {
            "title": {
                "$ref": "#/messages/bts.host"
            },
            "type": "string"
        },
        "bts-org-id": {
            "title": {
                "$ref": "#/messages/bts.org.id"
            },
            "type": "string"
        },
        "bts-org-prefix": {
            "title": {
                "$ref": "#/messages/bts.org.prefix"
            },
            "type": "string"
        },
        "bts-org-hq-gln": {
            "title": {
                "$ref": "#/messages/bts.org.hq.gln"
            },
            "type": "string"
        },
        "bts-api-key": {
            "title": {
                "$ref": "#/messages/bts.apikey"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        }
    },
    "required": [
        "api-key",
        "dev-region", 
        "dev-organization", 
        "dev-space",
        "icf-namespace",
        "icf-namespace-id",
        "poultry-sense-host",
        "poultry-sense-username",
        "poultry-sense-password",
        "bts-host",
        "bts-org-id",
        "bts-org-prefix",
        "bts-org-hq-gln",
        "bts-api-key"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["33%", "33%", "33%"],
            "items": [
              {
                "type": "label",
                "title": {
                    "$ref": "#/messages/region"
                }
              },
              {
                "type": "label",
                "title": {
                    "$ref": "#/messages/organization"
                }
              },
              {
                "type": "label",
                "title": {
                    "$ref": "#/messages/space"
                }
              },
              {
                "type": "select",
                "key": "dev-region"
              },
              {
                "type": "select",
                "key": "dev-organization"
              },
              {
                "type": "select",
                "key": "dev-space",
                "readonly": false
              }
            ]
        },
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/icf.configuration"
            }
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["40%", "20%", "40%"],
            "items": [
              {
                "type": "label",
                "title": {
                    "$ref": "#/messages/icf.namespace"
                }
              },
              {
                "type": "label",
                "title": ""
              },
              {
                "type": "label",
                "title": {
                    "$ref": "#/messages/icf.namespace.id"
                }
              },
              {
                "type": "text",
                "readonly": false,
                "title": {
                  "$ref": "#/messages/icf.namespace"
                },
                "key": "icf-namespace"
              },
              {
                "type": "label",
                "title": ""
              },
              {
                "type": "text",
                "readonly": false,
                "title": {
                  "$ref": "#/messages/icf.namespace.id"
                },
                "key": "icf-namespace-id"
              }
            ]
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["40%", "20%", "40%"],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/poultrysense.configuration"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/bts.configuration"
                    }
                },
                {
                    "type": "section",
                    "title": {
                        "$ref": "#/messages/poultrysense.configuration"
                    },
                    "items": [
                       "poultry-sense-host",
                       "poultry-sense-username",
                       {
                        "type": "password",
                        "readonly": false,
                        "title": {
                          "$ref": "#/messages/poultrysense.password"
                        },
                        "key": "poultry-sense-password"
                       }
                    ]
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "section",
                    "title": {
                        "$ref": "#/messages/bts.configuration"
                    },
                    "items": [
                       "bts-host",
                       "bts-org-id",
                       "bts-org-prefix",
                       "bts-org-hq-gln",
                       {
                        "type": "password",
                        "readonly": false,
                        "title": {
                          "$ref": "#/messages/bts.apikey"
                        },
                        "key": "bts-api-key"
                       }
                    ]
                 }
            ]
        }
    ]
}